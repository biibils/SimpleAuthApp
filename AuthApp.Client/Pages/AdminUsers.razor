@page "/admin/users"
@inject HttpClient Http
@using AuthApp.Domain.Entities

<div style="padding: 20px;">
    <h3>Daftar User</h3>
    <table style="width: 100%; border-collapse: collapse; margin-top: 20px;">
        <thead>
            <tr style="background-color: #f2f2f2; border-bottom: 2px solid #ddd;">
                <th style="padding: 10px; text-align: left;">Nama</th>
                <th style="padding: 10px; text-align: left;">Email</th>
                <th style="padding: 10px; text-align: left;">Role</th>
                <th style="padding: 10px; text-align: left;">Dibuat Pada</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in users)
            {
                <tr style="border-bottom: 1px solid #eee;">
                    <td style="padding: 10px;">@user.FullName</td>
                    <td style="padding: 10px;">@user.Email</td>
                    <td style="padding: 10px;">@user.Role</td>
                    <td style="padding: 10px;">@user.CreatedAt.ToString("dd MMM yyyy")</td>
                </tr>
            }
        </tbody>
    </table>
</div>

@code {
    private List<User> users = new();

    protected override async Task OnInitializedAsync()
    {
        try {
            users = await Http.GetFromJsonAsync<List<User>>("api/auth/users") ?? new();
        } catch (Exception ex) {
            Console.WriteLine("Error ambil data: " + ex.Message);
        }
    }
}